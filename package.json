{
  "name": "aoxc-dao-v2",
  "version": "2.1.0",
  "description": "AOXC Sovereign Fleet | Decentralized Autonomous Institution & Multi-Vessel Ecosystem",
  "author": "AOXC Academic Intelligence Unit",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "--- üåå CORE OPERATIONS ---": "",
    "nexus:init": "node --loader ts-node/esm TYPES/main.ts",
    "install:all": "yarn install && forge install",
    "build": "forge build --silent",
    "rebuild": "forge clean && forge build --optimizer-runs 1000",
    "test": "forge test -vv",
    "test:trace": "forge test -vvvv",
    "--- üõ†Ô∏è MAINTENANCE & EVOLUTION (NEW) ---": "",
    "fleet:clean": "node --loader ts-node/esm TYPES/91_sys_cleanup.ts",
    "fleet:evolve": "node --loader ts-node/esm TYPES/90_sys_evolution.ts",
    "fleet:resolve": "node --loader ts-node/esm TYPES/92_sys_conflict.ts",
    "--- üîç ANALYTICS & INTEGRITY ---": "",
    "check:all": "yarn lint && yarn typecheck && yarn test:coverage && yarn audit:knip",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:ts": "eslint \"TYPES/**/*.ts\" --fix",
    "lint:sol": "solhint \"AOXCORE/**/*.sol\" --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test:coverage": "type-coverage --at-least 90 --detail --strict",
    "format": "prettier --write .",
    "audit:knip": "knip",
    "--- üì° FLEET DEPLOYMENT (X LAYER) ---": "",
    "deploy:testnet": "source .env && forge script scripts/DeployFleet.s.sol --rpc-url $XLAYER_TESTNET_RPC --broadcast --verify",
    "deploy:mainnet": "source .env && forge script scripts/DeployFleet.s.sol --rpc-url $XLAYER_MAINNET_RPC --broadcast --verify",
    "--- üìú VERSION CONTROL ---": "",
    "release:major": "yarn version major",
    "release:minor": "yarn version minor",
    "release:patch": "yarn version patch"
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.2.0",
    "@openzeppelin/contracts-upgradeable": "5.2.0",
    "@prisma/client": "^7.4.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^25.2.3",
    "eslint": "^9.20.0",
    "eslint-plugin-import": "^2.31.0",
    "knip": "^5.83.1",
    "prettier": "^3.5.1",
    "prettier-plugin-packagejson": "^2.5.8",
    "prettier-plugin-solidity": "^1.4.3",
    "prisma": "^7.4.0",
    "solhint": "^6.0.3",
    "ts-node": "^10.9.2",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0"
  }
}
